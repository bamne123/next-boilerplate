{
  "name": "@ayanworks/next-boilerplate",
  "version": "0.1.0",
  "description": "A well-structured production ready Next boilerplate based on ARC and Container-View Pattern made with Nextjs with SASS, EmotionJS, Chakra UI, React Testing, Jest, Cypress, SWR, Bundle Analyzer, FakerJs, Bunddle Analyzer, Babel, ESLint, Webpack, StoryBook and Docker",
  "private": true,
  "author": "Nilesh Bamne <bamne123@gmail.com>",
  "license": "MIT",
  "main": "server/index.js",
  "scripts": {
    "server": "nodemon server/index.js 4000",
    "dev": "concurrently 'next dev -p 3000' 'yarn server'",
    "build": "next build",
    "start": "next start",
    "clean": "rm -rf node_modules .next .build out .nyc_output coverage",
    "lint": "eslint pages && eslint src",
    "test": "NODE_ENV=test jest",
    "test:dev": "NODE_ENV=test jest --watchAll",
    "test-coverage": "concurrently 'yarn dev -p 3000' 'yarn cy:open'",
    "cy:open": "cypress open",
    "pree2e": "rm -rf .nyc_output coverage .next || true",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "docker:start": "docker-compose up -d",
    "docker:build": "docker-compose build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker system prune -af",
    "generate": "node ./tools/generate.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "nyc": {
    "exclude": [
      "pages/api/__coverage__.js"
    ]
  },
  "keywords": [
    "nextjs",
    "boilerplate",
    "typeccript",
    "react",
    "prettier",
    "jest",
    "enzyme",
    "svg sprite",
    "husky",
    "cypress",
    "cypress-io",
    "cypress-example",
    "istanbul",
    "code-coverage"
  ],
  "dependencies": {
    "@chakra-ui/react": "^1.0.3",
    "@emotion/react": "^11.1.2",
    "@emotion/styled": "^11.0.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "framer-motion": "^2.9.5",
    "next": "10.0.3",
    "next-seo": "^4.17.0",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "sass": "^1.30.0",
    "swr": "^0.3.9"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@cypress/code-coverage": "^3.8.6",
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "apollo-server-koa": "^2.19.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "check-code-coverage": "^1.10.0",
    "concurrently": "^5.3.0",
    "core-js": "3",
    "create-index": "^2.6.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.1.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.1.0",
    "generate-template-files": "^3.0.0",
    "graphql": "^15.4.0",
    "husky": "^4.3.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-svg-transformer": "^1.0.0",
    "koa": "^2.13.1",
    "open-editor": "^2.0.1",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.11.6"
  }
}
